<h1>Admin Dashboard</h1>
<%= form_for Category.new do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.submit "Create Category" %>
<% end %>

<ul>

<% @categories.each do |category| %>
<li>
  <%= category.title %>
  <%= link_to("Edit", edit_category_path(category),  class: 'btn btn-sm btn-primary') %>
  <%= link_to("Delete", category_path(category), method: :delete, class: 'btn btn-sm btn-primary') %>
</li>
<% end %>
</ul>
